<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/body-start.ejs') %>
<%- include('../includes/nav.ejs') %>

<main class="container mx-auto">
   <h1 class="mt-16 mb-11 text-2xl text-center">Update your password!</h1>
   <div class="bg-gray-50 w-96 mx-auto py-12 px-12 drop-shadow-xl shadow-inner rounded-lg">
      <form action="/new-password" method="POST">
         <div class="mb-6">
            <label class="block mb-1" for="password">New Password</label>
            <input class="block w-full bg-transparent border-b-2 border-gray-300 focus:outline-none" type="password"
               name="password" id="password">
         </div>
         <input type="hidden" name="userId" value="<%= userId %>">
         <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
         <input type="hidden" name="_csrf" value="<%= csrfToken %>">
         <button
            class="bg-blue-700 text-slate-200 rounded-lg px-4 py-2 w-full transition ease-in-out 5 hover:bg-blue-500 duration-300"
            type="submit">Update Password</button>

         <% if (errorMessage) { %>

         <div class=" text-center mt-7">
            <p class="text-red-600 font-bold"><%= errorMessage %></p>
         </div>

         <% } %>
      </form>
   </div>
</main>
<%- include('../includes/end.ejs') %>