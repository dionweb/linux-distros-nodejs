<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/body-start.ejs') %>
<%- include('../includes/nav.ejs') %>

<main class="container mx-auto">
   <h1 class="mt-16 mb-11 text-2xl text-center">Sign in to Linux Distros!</h1>
   <div class="bg-gray-50 w-96 mx-auto py-12 px-12 drop-shadow-xl shadow-inner rounded-lg">
      <form action="/login" method="POST">
         <div class="mb-4">
            <label class="block mb-1" for="email">Email</label>
            <input class="block w-full bg-transparent border-b-2 border-gray-300 focus:outline-none" type="email"
               name="email" id="email">
         </div>
         <div class="mb-6">
            <label class="block mb-1" for="password">Password</label>
            <input class="block w-full bg-transparent border-b-2 border-gray-300 focus:outline-none" type="password"
               name="password" id="password">
         </div>
         <input type="hidden" name="_csrf" value="<%= csrfToken %>">
         <button type="submit"
            class="bg-blue-700 text-slate-200 rounded-lg px-4 py-2 mb-7 w-full transition ease-in-out 5 hover:bg-blue-500 duration-300">Login</button>

         <% if (errorMessage) { %>

         <div class=" text-center mb-7">
            <p class="text-red-600 font-bold"><%= errorMessage %></p>
            <p>Reset your password <span class="font-bold text-blue-700"><a href="/reset">here</a></span> or try
               again!</p>
         </div>
         <% } %>
      </form>
      <hr class="border-1 border-gray-300 w-1/3 m-auto mb-7">
      <p class="text-center">New to Linux Distros? <span class="text-blue-700 hover:text-blue-500 block"><a
               href="/signup">Create an
               account.</a></span> </p>
   </div>

</main>
<%- include('../includes/end.ejs') %>